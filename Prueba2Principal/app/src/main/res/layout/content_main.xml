<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.elberg.prueba2principal.MainActivity"
    tools:showIn="@layout/activity_main">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_x="0dp"
        android:layout_y="0dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ListView
        android:id="@+id/lv_m05_listactivity"
        android:layout_width="368dp"
        android:layout_height="match_parent"

        android:listSelector="@drawable/selector_files"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_below="@+id/editText"
        android:layout_marginTop="22dp"
        android:layout_x="11dp"
        android:layout_y="63dp"
        android:typeface="sans"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="76dp">

    </ListView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_m05_datepickerserch"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_x="295dp"
        android:layout_y="4dp"
        android:clickable="true"
        android:foregroundGravity="center"
        android:src="@android:drawable/ic_menu_today"
        app:elevation="0dp"
        app:fabSize="mini" />

    <TextView
        android:id="@+id/tv_m05_actualdate"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_x="20dp"
        android:layout_y="19dp"
        android:gravity="center"
        android:text="@string/_tv_m05_thisweek"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold" />


</AbsoluteLayout>
