<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:typeface="sans"
    android:id="@+id/it_m05_iditem"
    >

    <TextView
        android:id="@+id/tv_m05_sportname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:fontFamily="sans-serif"
        android:text="Sport"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:typeface="sans"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_m05_imagereference"
        android:layout_toEndOf="@+id/iv_m05_imagereference"
        android:layout_marginTop="11dp" />

    <ImageView
        android:id="@+id/iv_m05_imagereference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_alignTop="@+id/tv_m05_sportname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_m05_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Distance"
        android:textColor="?android:attr/textColorHint"
        android:textSize="18dp"
        android:typeface="sans"
        android:layout_below="@+id/tv_m05_uptime"
        android:layout_alignLeft="@+id/tv_m05_uptime"
        android:layout_alignStart="@+id/tv_m05_uptime" />

    <TextView
        android:id="@+id/tv_m05_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Time"
        android:textColor="@android:color/darker_gray"
        android:textSize="15dp"
        android:typeface="sans"
        android:layout_marginRight="52dp"
        android:layout_marginEnd="52dp"
        android:layout_alignTop="@+id/tv_m05_sportname"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tv_m05_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="speed"
        android:textColor="?android:attr/textColorHint"
        android:textSize="18dp"
        android:typeface="sans"
        android:layout_alignBaseline="@+id/tv_m05_distance"
        android:layout_alignBottom="@+id/tv_m05_distance"
        android:layout_alignRight="@+id/tv_m05_date"
        android:layout_alignEnd="@+id/tv_m05_date" />

    <TextView
        android:id="@+id/tv_m05_uptime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Uptime"
        android:textColor="#7d7d7d"
        android:textSize="18dp"
        android:typeface="sans"
        android:layout_below="@+id/tv_m05_sportname"
        android:layout_alignLeft="@+id/tv_m05_sportname"
        android:layout_alignStart="@+id/tv_m05_sportname" />

</RelativeLayout>